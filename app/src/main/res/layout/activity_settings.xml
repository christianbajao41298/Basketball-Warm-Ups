<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="16dp"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/settingsappicon"
                android:contentDescription="@string/settingIcon" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                android:text="@string/countdown_timer"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_below="@id/textView1"/>

            <EditText
                android:id="@+id/text_input"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="21.5dp"
                android:layout_toEndOf="@id/textView2"
                android:layout_toRightOf="@id/textView2"
                android:ems="10"
                android:hint="@string/in_secs"
                android:inputType="number" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_input"
                android:layout_toEndOf="@id/textView2"
                android:layout_marginLeft="57dp"
                android:text="Save" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="16dp"
                android:text="@string/rest_timer"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/text_input2"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="121.5dp"
                android:layout_toEndOf="@id/textView2"
                android:layout_toRightOf="@id/textView2"
                android:ems="10"
                android:hint="@string/in_secs"
                android:inputType="number" />

            <Button
                android:id="@+id/btnSave2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_input"
                android:layout_toEndOf="@id/textView2"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="100dp"
                android:text="Save" />


        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>